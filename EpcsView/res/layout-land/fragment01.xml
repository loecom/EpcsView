<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.lchb.epcsview.MainActivity$PlaceholderFragment" >

    	<LinearLayout
    	    android:layout_width="fill_parent"
    	    android:layout_height="fill_parent"
    	    android:background="#000000"
    	    android:orientation="vertical" >
		
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="9"
		    android:background="#000000"
		    android:orientation="horizontal" >

			<TextView
			    android:id="@+id/txtDeviceName"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_marginRight="1dp"
			    android:layout_weight="1"
			    android:background="#ffffff"
			    android:gravity="center"
			    android:text="#炉-#除尘器-##通道-##电场-###设备" />

			<TextView
			    android:id="@+id/txtDeviceType"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="2.3"
			    android:background="#ffffff"
			    android:gravity="center"
			    android:text="类型:未知设备" />

	</LinearLayout>
	
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_marginTop="1dp"
		    android:layout_weight="1"
		    android:background="#000000"
		    android:orientation="horizontal" >
	
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_marginRight="1dp"
		    android:layout_weight="1"
		    android:background="#000000"
		    android:orientation="vertical" >

		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_marginBottom="1dp"
		    android:layout_weight="5"
		    android:background="#000000"
		    android:orientation="horizontal" >
		    
		    <TextView
		        android:id="@+id/txtStatusTitle"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_marginRight="1dp"
		        android:layout_weight="1"
		        android:background="#ffffff"
		        android:gravity="center"
		        android:text="运行状态" />
		    
		    <TextView
		        android:id="@+id/txtRemoteTitle"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_marginRight="1dp"
		        android:layout_weight="1"
		        android:background="#ffffff"
		        android:gravity="center"
		        android:text="遥控状态" />
		    
		    <TextView
		        android:id="@+id/txtAlarmTitle"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_marginRight="1dp"
		        android:layout_weight="1"
		        android:background="#ffffff"
		        android:gravity="center"
		        android:text="故障状态" />
		    
		    <TextView
		        android:id="@+id/txtLimitTitle"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="1"
		        android:background="#ffffff"
		        android:gravity="center"
		        android:text="限制状态" />
		    
		</LinearLayout>

		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_marginBottom="1dp"
		    android:layout_weight="5"
		    android:background="#000000"
		    android:orientation="horizontal" >
		    
		    <TextView
		        android:id="@+id/txtStatus"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_marginRight="1dp"
		        android:layout_weight="1"
		        android:background="#00ff00"
		        android:gravity="center"
		        android:text="停机" />
		    
		    <TextView
		        android:id="@+id/txtRemote"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_marginRight="1dp"
		        android:layout_weight="1"
		        android:background="#ffffff"
		        android:gravity="center"
		        android:text="手动控制" />
		    
		    <TextView
		        android:id="@+id/txtAlarm"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_marginRight="1dp"
		        android:layout_weight="1"
		        android:background="#ffffff"
		        android:gravity="center"
		        android:text="设备正常" />
		    
		    <TextView
		        android:id="@+id/txtLimit"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="1"
		        android:background="#ffffff"
		        android:gravity="center"
		        android:text="无参数限制" />
		    
		</LinearLayout>

			<ListView
			    android:id="@+id/gridView"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:background="#ffffff" >

			</ListView>

			    </LinearLayout>

			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="2.3"
			    android:background="#000000"
			    android:orientation="horizontal" >

			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_weight="0.8"
			        android:background="#000000"
			        android:orientation="vertical" >

			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_marginBottom="1dp"
			        android:layout_marginRight="1dp"
			        android:layout_weight="0.8"
			        android:background="#ffffff"
			        android:orientation="vertical" >

			        <Button
			            android:id="@+id/btnStart"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:layout_weight="1"
			            android:text="开机" />
			    </LinearLayout>

			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_marginBottom="1dp"
			        android:layout_marginRight="1dp"
			        android:layout_weight="0.8"
			        android:background="#ffffff"
			        android:orientation="vertical" >

			        <Button
			            android:id="@+id/btnStop"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:layout_weight="1"
			            android:text="停机" />
			    </LinearLayout>

			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_marginBottom="1dp"
			        android:layout_marginRight="1dp"
			        android:layout_weight="0.8"
			        android:background="#ffffff"
			        android:orientation="vertical" >

			        <Button
			            android:id="@+id/btnReset"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:layout_weight="1"
			            android:text="重启" />
			    </LinearLayout>

			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_marginRight="1dp"
			        android:layout_weight="0.8"
			        android:background="#ffffff"
			        android:orientation="vertical" >

			        <Button
			            android:id="@+id/btnSaveSetting"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:layout_weight="1"
			            android:text="保存参数" />
			    </LinearLayout>

			    </LinearLayout>

			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_weight="0.8"
			        android:background="#000000"
			        android:orientation="vertical" >

			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_marginBottom="1dp"
			        android:layout_weight="0.8"
			        android:background="#ffffff"
			        android:orientation="vertical" >

			        <Button
			            android:id="@+id/btnDown"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:layout_weight="1"
			            android:text="降压" />
			    </LinearLayout>

			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_marginBottom="1dp"
			        android:layout_weight="0.8"
			        android:background="#ffffff"
			        android:orientation="vertical" >

			        <Button
			            android:id="@+id/btnPause"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:layout_weight="1"
			            android:text="中止" />
			    </LinearLayout>

			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_marginBottom="1dp"
			        android:layout_weight="0.8"
			        android:background="#ffffff"
			        android:orientation="vertical" >

			        <Button
			            android:id="@+id/btnUp"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:layout_weight="1"
			            android:text="恢复" />
			    </LinearLayout>

			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_weight="0.8"
			        android:background="#ffffff"
			        android:orientation="vertical" >

			        <Button
			            android:id="@+id/btnRstAlarm"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:layout_weight="1"
			            android:text="清除故障" />
			    </LinearLayout>
			    </LinearLayout>
			</LinearLayout>

	</LinearLayout>
	

	
	</LinearLayout>

</RelativeLayout>
